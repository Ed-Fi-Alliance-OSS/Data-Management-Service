<?xml version="1.0" encoding="utf-8"?>
<!--
  Profile: School-Minimal
  Purpose: Public-facing school directory information
  Use Case: School finder applications, public directories, maps
  Version: 1.0
  Created: 2025-12-09

  This profile exposes only publicly available school information:
  - School identification and name
  - Operational status (Open, Closed, Future)
  - School type and categories
  - Local Education Agency association

  Excluded information:
  - Internal administrative details
  - Staff assignments
  - Budget/financial data
  - Student enrollment counts (if sensitive)
  - Detailed addresses (if privacy concern)
-->
<Profile name="School-Minimal">
  <Resource name="School">
    <ReadContentType memberSelection="IncludeOnly">
      <!-- Core Identity -->
      <Property name="SchoolId" />
      <Property name="NameOfInstitution" />
      <Property name="ShortNameOfInstitution" />

      <!-- Operational Status -->
      <Property name="OperationalStatusDescriptor" />

      <!-- School Type and Categories -->
      <Property name="SchoolTypeDescriptor" />
      <Collection name="SchoolCategories" memberSelection="IncludeOnly">
        <Property name="SchoolCategoryDescriptor" />
      </Collection>

      <!-- Grade Levels Offered -->
      <Collection name="GradeLevels" memberSelection="IncludeOnly">
        <Property name="GradeLevelDescriptor" />
      </Collection>

      <!-- LEA Association -->
      <Object name="LocalEducationAgencyReference" memberSelection="IncludeOnly">
        <Property name="LocalEducationAgencyId" />
      </Object>

      <!-- Basic Address (Optional) -->
      <Collection name="Addresses" memberSelection="IncludeOnly">
        <Property name="AddressTypeDescriptor" />
        <Property name="City" />
        <Property name="StateAbbreviationDescriptor" />
        <Property name="PostalCode" />
        <!-- Exclude StreetNumberName for privacy if needed -->
      </Collection>

      <!-- Contact Information (Optional) -->
      <Collection name="InstitutionTelephones" memberSelection="IncludeOnly">
        <Property name="InstitutionTelephoneNumberTypeDescriptor" />
        <Property name="TelephoneNumber" />
      </Collection>
    </ReadContentType>
    <!-- No WriteContentType = Read-only public directory -->
  </Resource>
</Profile>
