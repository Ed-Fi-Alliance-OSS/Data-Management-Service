{
    "AppSettings": {
        "BeginAllowedSchoolYear": 2022,
        "EndAllowedSchoolYear": 2035,
        "AuthenticationService": "http://dev-test-auth-service",
        "DatabaseEngine": "postgresql",
        "DeployDatabaseOnStartup": false
    },
    "ConnectionStrings": {
        "DatabaseConnection": "host=${POSTGRES_HOST};port=${POSTGRES_PORT};username=${POSTGRES_USER};password=${POSTGRES_PASSWORD};database=edfi_datamanagementservice;"
    },
    "AllowedHosts": "*",
    "RateLimit": {
        "PermitLimit": 50,
        "Window": 10,
        "QueueLimit": 0
    },
    "Serilog": {
        "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Console" ],
        "MinimumLevel": {
            "Default": "Information"
        },
        "WriteTo": [
            {
                "Name": "File",
                "Args": {
                    "path": "./logs/.log",
                    "rollingInterval": "Day",
                    "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} {Level:u3} {Message:lj}{NewLine}{Exception}"
                }
            },
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} {Level:u3} {Message:lj}{Exception}{NewLine}"
                }
            }
        ]
    }
}
