{
    "AppSettings": {
        "AuthenticationService": "${OAUTH_TOKEN_ENDPOINT}",
        "Datastore": "${DMS_DATASTORE:-postgres}",
        "QueryHandler": "${DMS_QUERYHANDLER:-postgres}",
        "DeployDatabaseOnStartup": false,
        "BypassStringTypeCoercion": "${BYPASS_STRING_COERCION:-false}",
        "CorrelationIdHeader": "${CORRELATION_ID_HEADER}"
    },
    "ConnectionStrings": {
        "DatabaseConnection": "${DATABASE_CONNECTION_STRING}",
        "OpenSearchUrl": "${OPENSEARCH_URL}"
    },
    "DatabaseOptions": {
        "IsolationLevel": "${DATABASE_ISOLATION_LEVEL:-RepeatableRead}"
    },
    "CircuitBreaker": {
        "FailureRatio": "${FAILURE_RATIO:-0.01}",
        "SamplingDurationSeconds": "${SAMPLING_DURATION_SECONDS:-10}",
        "MinimumThroughput": "${MINIMUM_THROUGHPUT:-2}",
        "BreakDurationSeconds": "${BREAK_DURATION_SECONDS:-30}"
    },
    "AllowedHosts": "*",
    "Serilog": {
        "Using": ["Serilog.Sinks.File", "Serilog.Sinks.Console"],
        "MinimumLevel": {
            "Default": "${LOG_LEVEL:-INFO}"
        },
        "WriteTo": [
            {
                "Name": "File",
                "Args": {
                    "path": "./logs/.log",
                    "rollingInterval": "Day",
                    "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} {Level:u3} {Message:lj}{NewLine}{Exception}"
                }
            },
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} {Level:u3} {Message:lj}{Exception}{NewLine}"
                }
            }
        ]
    }
}
