{
  "apiSchemaVersion": "1.0.0",
  "projectSchema": {
    "projectName": "Ed-Fi",
    "projectEndpointName": "ed-fi",
    "projectVersion": "5.0.0",
    "resourceSchemas": {
      "people": {
        "resourceName": "Person",
        "isDescriptor": false,
        "isResourceExtension": false,
        "isSubclass": false,
        "allowIdentityUpdates": false,
        "arrayUniquenessConstraints": [
        ],
        "identityJsonPaths": [
          "$.personId"
        ],
        "documentPathsMapping": {
          "PersonId": {
            "isReference": false,
            "isPartOfIdentity": true,
            "isRequired": true,
            "path": "$.personId"
          }
        },
        "jsonSchemaForInsert": {
          "type": "object",
          "properties": {
            "personId": {
              "type": "integer"
            },
            "addresses": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "addressType": {
                    "type": "string",
                    "maxLength": 20
                  },
                  "periods": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "beginDate": {
                          "type": "string",
                          "format": "date"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "required": [
            "personId"
          ]
        },
        "relational": {
          "nameOverrides": {
            "$.addresses[*]": "site"
          }
        }
      }
    }
  }
}
