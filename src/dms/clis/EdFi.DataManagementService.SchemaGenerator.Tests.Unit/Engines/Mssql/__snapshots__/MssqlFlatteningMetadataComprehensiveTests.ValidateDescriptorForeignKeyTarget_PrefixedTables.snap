-- MSSQL CREATE TABLE edfi_edfi_AssessmentItem
IF NOT EXISTS (SELECT * FROM sys.tables WHERE name = 'edfi_edfi_AssessmentItem' AND SCHEMA_NAME(schema_id) = 'dms')
BEGIN
    CREATE TABLE [dms].[edfi_edfi_AssessmentItem] (
    [Id] BIGINT PRIMARY KEY IDENTITY(1,1),
    [Document_Id] BIGINT NOT NULL,
    [Document_PartitionKey] TINYINT NOT NULL,
    [AssessmentItemCategoryDescriptorId] INT NOT NULL,
    [CreateDate] DATETIME2 NOT NULL,
    [LastModifiedDate] DATETIME2 NOT NULL,
    [ChangeVersion] BIGINT NOT NULL
    );
    PRINT 'Table edfi_edfi_AssessmentItem created.';
END
ELSE
    PRINT 'Table edfi_edfi_AssessmentItem already exists, skipped.';

IF NOT EXISTS (SELECT * FROM sys.indexes WHERE name = 'IX_edfi_AssessmentItem_Document' AND object_id = OBJECT_ID('[dms].[edfi_edfi_AssessmentItem]'))
BEGIN
    CREATE NONCLUSTERED INDEX [IX_edfi_AssessmentItem_Document]
        ON [dms].[edfi_edfi_AssessmentItem]([Document_Id], [Document_PartitionKey]);
    PRINT 'Index IX_edfi_AssessmentItem_Document created.';
END


-- Foreign Key Constraints

IF NOT EXISTS (SELECT * FROM sys.foreign_keys WHERE name = 'FK_edfi_AssessmentItem_Document')
BEGIN
    ALTER TABLE [dms].[edfi_edfi_AssessmentItem] ADD CONSTRAINT [FK_edfi_AssessmentItem_Document] FOREIGN KEY ([Document_Id], [Document_PartitionKey]) REFERENCES [dms].[Document]([Id], [DocumentPartitionKey]) ON DELETE CASCADE;
    PRINT 'Foreign key constraint FK_edfi_AssessmentItem_Document created.';
END
ELSE
    PRINT 'Foreign key constraint FK_edfi_AssessmentItem_Document already exists, skipped.';
GO

