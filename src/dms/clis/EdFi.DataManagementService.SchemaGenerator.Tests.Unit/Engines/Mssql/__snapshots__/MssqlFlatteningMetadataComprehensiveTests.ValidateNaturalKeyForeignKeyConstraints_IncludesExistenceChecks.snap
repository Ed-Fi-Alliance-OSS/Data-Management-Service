-- Natural Key Resolution Views

-- Natural Key Resolution View for Student_View
IF NOT EXISTS (SELECT * FROM sys.views WHERE name = 'Student_View' AND SCHEMA_NAME(schema_id) = 'dms')
BEGIN
    EXEC('CREATE VIEW [dms].[Student_View] AS
    SELECT
        base.Id,
        base.Document_Id,
        base.Document_PartitionKey,
        base.StudentUniqueId
    FROM [dms].[edfi_Student] base');
    PRINT 'View Student_View created.';
END
ELSE
    PRINT 'View Student_View already exists, skipped.';
GO



-- Natural Key Resolution View for Grade_View
IF NOT EXISTS (SELECT * FROM sys.views WHERE name = 'Grade_View' AND SCHEMA_NAME(schema_id) = 'dms')
BEGIN
    EXEC('CREATE VIEW [dms].[Grade_View] AS
    SELECT
        base.Id,
        base.Document_Id,
        base.Document_PartitionKey,
        base.Student_Id,
        student.StudentUniqueId AS Student_StudentUniqueId,
        base.GradeIdentifier
    FROM [dms].[edfi_Grade] base
    INNER JOIN [dms].[edfi_Student] student ON base.Student_Id = student.Id');
    PRINT 'View Grade_View created.';
END
ELSE
    PRINT 'View Grade_View already exists, skipped.';
GO



