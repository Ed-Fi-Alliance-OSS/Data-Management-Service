    PRINT 'Table edfi_Grade created.';
END
ELSE
    PRINT 'Table edfi_Grade already exists, skipped.';

IF NOT EXISTS (SELECT * FROM sys.indexes WHERE name = 'IX_Grade_Student' AND object_id = OBJECT_ID('[dms].[edfi_Grade]'))
