{
    "type": "object",
    "properties": {
        "projectNameMapping": {
            "type": "object",
            "patternProperties": {
                "^.*$": {
                    "type": "string"
                }
            },
            "additionalProperties": false
        },
        "projectSchemas": {
            "type": "object",
            "patternProperties": {
                "^.*$": {
                    "$ref": "#/definitions/ProjectSchemas"
                }
            },
            "additionalProperties": false
        }
    },
    "required": [
        "projectNameMapping",
        "projectSchemas"
    ],
    "definitions": {
        "ProjectSchemas": {
            "type": "object",
            "properties": {
                "abstractResources": {
                    "type": "object",
                    "patternProperties": {
                        "^.*$": {
                            "type": "object",
                            "properties": {
                                "identityJsonPaths": {
                                    "$ref": "#/definitions/JsonPaths"
                                }
                            },
                            "additionalProperties": false
                        }
                    },
                    "additionalProperties": false
                },
                "caseInsensitiveEndpointNameMapping": {
                    "type": "object",
                    "patternProperties": {
                        "^[a-z0-9]+$": {
                            "type": "string"
                        }
                    },
                    "additionalProperties": false
                },
                "compatibleDsRange": true,
                "description": {
                    "type": "string"
                },
                "isExtensionProject": {
                    "type": "boolean"
                },
                "projectName": {
                    "type": "string"
                },
                "projectVersion": {
                    "type": "string"
                },
                "resourceNameMapping": {
                    "type": "object",
                    "patternProperties": {
                        "^[A-Za-z0-9]+$": {
                            "type": "string"
                        }
                    },
                    "additionalProperties": false
                },
                "resourceSchemas": {
                    "$ref": "#/definitions/ResourceSchemas"
                }
            },
            "required": [
                "abstractResources",
                "caseInsensitiveEndpointNameMapping",
                "description",
                "isExtensionProject",
                "projectName",
                "projectVersion",
                "resourceNameMapping",
                "resourceSchemas"
            ],
            "additionalProperties": false
        },
        "JsonPaths": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/JsonPath"
            }
        },
        "JsonPath": {
            "type": "string",
            "pattern": "^\\$\\."
        },
        "ResourceSchemas": {
            "type": "object",
            "patternProperties": {
                "^[A-Za-z0-9]+$": {
                    "type": "object",
                    "properties": {
                        "allowIdentityUpdates": {
                            "type": "boolean"
                        },
                        "documentPathsMapping": {
                            "$ref": "#/definitions/DocumentPathsMapping"
                        },
                        "equalityConstraints": {
                            "type": "array",
                            "items": {}
                        },
                        "identityJsonPaths": {
                            "$ref": "#/definitions/JsonPaths"
                        },
                        "isDescriptor": {
                            "type": "boolean"
                        },
                        "isSchoolYearEnumeration": {
                            "type": "boolean"
                        },
                        "isSubclass": {
                            "type": "boolean"
                        },
                        "jsonSchemaForInsert": {
                            "type": "object"
                        },
                        "resourceName": {
                            "type": "string"
                        },
                        "subclassType": {
                            "type": "string"
                        },
                        "superclassIdentityJsonPath": {
                            "type": "string"
                        },
                        "superclassProjectName": {
                            "type": "string"
                        },
                        "superclassResourceName": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "allowIdentityUpdates",
                        "documentPathsMapping",
                        "equalityConstraints",
                        "identityJsonPaths",
                        "isDescriptor",
                        "isSchoolYearEnumeration",
                        "isSubclass",
                        "jsonSchemaForInsert",
                        "resourceName"
                    ]
                }
            },
            "additionalProperties": false
        },
        "DocumentPathsMapping": {
            "type": "object",
            "patternProperties": {
                "^[A-Za-z0-9\\.]+$": {
                    "type": "object",
                    "properties": {
                        "isReference": {
                            "type": "boolean"
                        },
                        "isDescriptor": {
                            "type": "boolean"
                        },
                        "projectName": {
                            "type": "string"
                        },
                        "resourceName": {
                            "type": "string"
                        },
                        "path": {
                            "$ref": "#/definitions/JsonPath"
                        },
                        "type": {
                            "type": "string"
                        },
                        "referenceJsonPaths": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "identityJsonPath": {
                                        "$ref": "#/definitions/JsonPath"
                                    },
                                    "referenceJsonPath": {
                                        "$ref": "#/definitions/JsonPath"
                                    },
                                    "type": {
                                        "type": "string"
                                    }
                                },
                                "additionalProperties": false
                            }
                        }
                    },
                    "required": [
                        "isReference"
                    ],
                    "additionalProperties": false
                }
            },
            "additionalProperties": false
        }
    }
}
