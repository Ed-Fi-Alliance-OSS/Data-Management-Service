  Sample Profile: Student Demographics Only
  
  This profile restricts Student resource access to basic demographic information only.
  It excludes personally identifiable information such as addresses, phone numbers,
  and electronic mail addresses.
  
  Use Case: Public-facing student directory or limited access reporting
-->
<Profile name="Student-Demographics-Only">
  <Resource name="Student">
    <ReadContentType memberSelection="IncludeOnly">
      <!-- Identity -->
      <Property name="StudentUniqueId" />
      <Property name="Id" />
      
      <!-- Basic Demographics -->
      <Property name="FirstName" />
      <Property name="MiddleName" />
      <Property name="LastSurname" />
      <Property name="GenerationCodeSuffix" />
      <Property name="BirthDate" />
      <Property name="BirthSexDescriptor" />
      
      <!-- Optional Demographics -->
      <Property name="BirthCity" />
      <Property name="BirthStateAbbreviationDescriptor" />
      <Property name="BirthCountryDescriptor" />
      <Property name="CitizenshipStatusDescriptor" />
      <Property name="DateEnteredUS" />
    </ReadContentType>
    
    <!-- No write access - read-only profile -->
    <WriteContentType memberSelection="ExcludeAll" />
  </Resource>
</Profile>
