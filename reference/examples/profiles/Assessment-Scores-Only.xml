  Sample Profile: Assessment Scores Only
  
  This profile provides access to student assessment scores without exposing
  detailed assessment accommodations, items, or performance level information.
  
  Use Case: District-level reporting dashboard, aggregate score analysis
-->
<Profile name="Assessment-Scores-Only">
  <Resource name="StudentAssessment">
    <ReadContentType memberSelection="IncludeAll">
      <!-- Exclude detailed assessment information -->
      <Collection name="accommodations" memberSelection="ExcludeOnly" />
      <Collection name="items" memberSelection="ExcludeOnly" />
      <Collection name="performanceLevels" memberSelection="ExcludeOnly" />
      <Collection name="studentObjectiveAssessments" memberSelection="ExcludeOnly" />
      
      <!-- Keep scoreResults collection for aggregate analysis -->
      <Collection name="scoreResults" memberSelection="IncludeAll" />
    </ReadContentType>
    
    <!-- No write access - read-only profile -->
    <WriteContentType memberSelection="ExcludeAll" />
  </Resource>
</Profile>
